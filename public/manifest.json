{
	"manifest_version": 3,
	"name": "WebTracer - A productivity tool to track your screen time",
	"version": "1.0.2",
	"description": "A simple extension that tracks your screen time",
	"author": "David Kim",
	"action": {
		"default_popup": "index.html"
	},
	"permissions": [ "tabs", "storage" ],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"host_permissions": [ "http://*/*", "https://*/*" ],
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
